<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.msrouji.blacklinesservices.MainActivity"
    tools:showIn="@layout/app_bar_main">

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:rowCount="3"
        android:columnCount="2"
        android:foregroundGravity="center"
        android:padding="@dimen/grid_padding"
        android:stretchMode="columnWidth">

        <ImageView
            android:layout_width="@dimen/grid_size_square"
            android:layout_height="@dimen/grid_size_square"
            android:layout_column="0"
            android:layout_row="0"
            android:padding="@dimen/small_gap"
            android:clickable="true"
            android:src="@drawable/chatting"
            android:id="@+id/chat_menu"
            android:onClick="onNavigationItemSelected"/>

        <ImageView
            android:layout_width="@dimen/grid_size_square"
            android:layout_height="@dimen/grid_size_square"
            android:layout_column="1"
            android:layout_row="0"
            android:clickable="true"
            android:padding="@dimen/small_gap"
            android:src="@drawable/booking"
            android:id="@+id/booking_menu"
            android:onClick="onNavigationItemSelected"/>

        <ImageView
            android:layout_width="@dimen/grid_size_square"
            android:layout_height="@dimen/grid_size_square"
            android:layout_column="0"
            android:layout_row="1"
            android:clickable="true"
            android:padding="@dimen/small_gap"
            android:src="@drawable/drive"
            android:id="@+id/drive_menu"
            android:onClick="onNavigationItemSelected"/>

        <ImageView
            android:layout_width="@dimen/grid_size_square"
            android:layout_height="@dimen/grid_size_square"
            android:layout_column="1"
            android:layout_row="1"
            android:padding="@dimen/small_gap"
            android:clickable="true"
            android:src="@drawable/groups"
            android:id="@+id/group_menu"
            android:onClick="onNavigationItemSelected"/>

        <ImageView
            android:layout_width="@dimen/grid_size_square"
            android:layout_height="@dimen/grid_size_square"
            android:layout_column="0"
            android:layout_row="2"
            android:padding="@dimen/small_gap"
            android:clickable="true"
            android:src="@drawable/settings"
            android:id="@+id/settings_menu"
            android:onClick="onNavigationItemSelected"/>

        <ImageView
            android:layout_width="@dimen/grid_size_square"
            android:layout_height="@dimen/grid_size_square"
            android:layout_column="1"
            android:layout_row="2"
            android:padding="@dimen/small_gap"
            android:clickable="true"
            android:src="@drawable/airplane"
            android:id="@+id/airplane_menu"
            android:onClick="onNavigationItemSelected"/>

    </GridLayout>
</RelativeLayout>
